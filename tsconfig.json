{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "jsx": "react",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "typeRoots" : ["./node_modules/@types", "./types"],
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["src/**/*", "typings.d.ts", "types/**/*"]
  }
  